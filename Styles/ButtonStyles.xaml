<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <!-- Először az effekt -->
    <!-- Árnyék effektus -->
    <DropShadowEffect x:Key="DropShadow"
                  Color="Black"
                  Direction="270"
                  ShadowDepth="4"
                  BlurRadius="8"
                  Opacity="0.5"/>

    <Style TargetType="Button">

		<Setter Property="Height" Value="25"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Background" Value="#3A3A5A"/>
        <Setter Property="Padding" Value="10,5"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="10"
                            BorderThickness="0"
                            SnapsToDevicePixels="True"
                            Effect="{StaticResource DropShadow}">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          RecognizesAccessKey="True"
                                          TextElement.FontFamily="{TemplateBinding FontFamily}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#505080"/>
                            <Setter Property="Foreground" Value="LightGoldenrodYellow"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#2D2D40"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Megoldás: string típushoz DataTemplate -->
    <DataTemplate DataType="{x:Type sys:String}">
        <TextBlock Text="{Binding}" FontFamily="/Fonts/#Poppins Medium"/>
    </DataTemplate>

    <Style x:Key="OkButtonStyleKey" TargetType="Button">
        <Setter Property="Background" Value="Green"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>
    <Style x:Key="CancelButtonStyleKey" TargetType="Button">
        <Setter Property="Background" Value="Red"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>
    
</ResourceDictionary>