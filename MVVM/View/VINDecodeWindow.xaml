<Window x:Class="ELM327_GUI.MVVM.View.VINDecodeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ELM327_GUI.MVVM.View"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="150" Width="300"
        WindowStartupLocation="CenterOwner">
	<StackPanel Margin="10">
		<TextBlock Text="{Binding Prompt}" Margin="0,0,0,10" TextWrapping="Wrap" />
		<TextBox Text="{Binding VINInput, UpdateSourceTrigger=PropertyChanged}" />
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
			<Button Content="Dekódolás" Width="85" Margin="5,0,0,0" Command="{Binding VINDecodeCommand}" />
			<Button Content="Ismertető" Width="85" Margin="5,0,0,0" Command="{Binding ShowInfoCommand}" />
		</StackPanel>
	</StackPanel>
</Window>