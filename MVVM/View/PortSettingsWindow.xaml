<Window x:Class="ELM327_GUI.MVVM.View.PortSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ELM327_GUI.MVVM.View"
		xmlns:vm="clr-namespace:ELM327_GUI.MVVM.ViewModel"
		xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:ioPorts="clr-namespace:System.IO.Ports;assembly=System"
        mc:Ignorable="d"
        Title="PortSettingsWindow" Height="330" Width="350" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
	
	<Window.Resources>
		<ObjectDataProvider MethodName="GetValues" ObjectType="{x:Type sys:Enum}" x:Key="ParityValues">
			<ObjectDataProvider.MethodParameters>
				<x:Type TypeName="ioPorts:Parity"/>
			</ObjectDataProvider.MethodParameters>
		</ObjectDataProvider>
		<ObjectDataProvider MethodName="GetValues" ObjectType="{x:Type sys:Enum}" x:Key="StopBitsValues">
			<ObjectDataProvider.MethodParameters>
				<x:Type TypeName="ioPorts:StopBits"/>
			</ObjectDataProvider.MethodParameters>
		</ObjectDataProvider>
		<ObjectDataProvider MethodName="GetValues" ObjectType="{x:Type sys:Enum}" x:Key="HandshakeValues">
			<ObjectDataProvider.MethodParameters>
				<x:Type TypeName="ioPorts:Handshake"/>
			</ObjectDataProvider.MethodParameters>
		</ObjectDataProvider>
		<ObjectDataProvider MethodName="GetValues" ObjectType="{x:Type sys:Enum}" x:Key="BaudRateEnumValues">
			<ObjectDataProvider.MethodParameters>
				<x:Type TypeName="vm:PortSettingsViewModel+BaudRateEnum"/>
			</ObjectDataProvider.MethodParameters>
		</ObjectDataProvider>
		<ObjectDataProvider MethodName="GetValues" ObjectType="{x:Type sys:Enum}" x:Key="DataBitsEnumValues">
			<ObjectDataProvider.MethodParameters>
				<x:Type TypeName="vm:PortSettingsViewModel+DataBitsEnum"/>
			</ObjectDataProvider.MethodParameters>
		</ObjectDataProvider>
		<ObjectDataProvider MethodName="GetValues" ObjectType="{x:Type sys:Enum}" x:Key="NewLineEnumValues">
			<ObjectDataProvider.MethodParameters>
				<x:Type TypeName="vm:PortSettingsViewModel+NewLineEnum"/>
			</ObjectDataProvider.MethodParameters>
		</ObjectDataProvider>
	</Window.Resources>

	<Grid Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="140"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>

		<!-- PortName -->
		<TextBlock Grid.Row="0" Grid.Column="0" Text="Port név:" VerticalAlignment="Center" Margin="0,0,5,5"/>
		<ComboBox Grid.Row="0" Grid.Column="1"
				  ItemsSource="{Binding Ports}"
                  SelectedItem="{Binding PortName, Mode=TwoWay}"
                  Margin="0,0,0,5"/>

		<!-- BaudRate -->
		<TextBlock Grid.Row="1" Grid.Column="0" Text="Baudráta:" VerticalAlignment="Center" Margin="0,0,5,5"/>
		<ComboBox Grid.Row="1" Grid.Column="1"
				  ItemsSource="{Binding Source={StaticResource BaudRateEnumValues}}"
				  SelectedItem="{Binding BaudRate, Mode=TwoWay}"
                  Margin="0,0,0,5"/>

		<!-- DataBits -->
		<TextBlock Grid.Row="2" Grid.Column="0" Text="Adatbitek:" VerticalAlignment="Center" Margin="0,0,5,5"/>
		<ComboBox Grid.Row="2" Grid.Column="1"
				  ItemsSource="{Binding Source={StaticResource DataBitsEnumValues}}"
				  SelectedItem="{Binding DataBits, Mode=TwoWay}"
                  Margin="0,0,0,5"/>
		
		<!-- Parity -->
		<TextBlock Grid.Row="3" Grid.Column="0" Text="Paritás:" VerticalAlignment="Center" Margin="0,0,5,5"/>
		<ComboBox Grid.Row="3" Grid.Column="1"
                  ItemsSource="{Binding Source={StaticResource ParityValues}}"
                  SelectedItem="{Binding Parity, Mode=TwoWay}"
                  Margin="0,0,0,5"/>

		<!-- StopBits -->
		<TextBlock Grid.Row="4" Grid.Column="0" Text="Stop bitek:" VerticalAlignment="Center" Margin="0,0,5,5"/>
		<ComboBox Grid.Row="4" Grid.Column="1"
                  ItemsSource="{Binding Source={StaticResource StopBitsValues}}"
                  SelectedItem="{Binding StopBits, Mode=TwoWay}"
                  Margin="0,0,0,5"/>

		<!-- Handshake -->
		<TextBlock Grid.Row="5" Grid.Column="0" Text="Adatfolyam szabályozás:" VerticalAlignment="Center" Margin="0,0,5,5"/>
		<ComboBox Grid.Row="5" Grid.Column="1"
                  ItemsSource="{Binding Source={StaticResource HandshakeValues}}"
                  SelectedItem="{Binding Handshake, Mode=TwoWay}"
                  Margin="0,0,0,5"/>

		<!-- ReadTimeout -->
		<TextBlock Grid.Row="6" Grid.Column="0" Text="Olvasási időkorlát (ms):" VerticalAlignment="Center" Margin="0,0,5,5"/>
		<TextBox Grid.Row="6" Grid.Column="1" Text="{Binding ReadTimeout}" Margin="0,0,0,5"/>

		<!-- WriteTimeout -->
		<TextBlock Grid.Row="7" Grid.Column="0" Text="Írási időkorlát (ms):" VerticalAlignment="Center" Margin="0,0,5,5"/>
		<TextBox Grid.Row="7" Grid.Column="1" Text="{Binding WriteTimeout}" Margin="0,0,0,5"/>

		<!-- NewLine -->
		<TextBlock Grid.Row="8" Grid.Column="0" Text="Új sor karakter:" VerticalAlignment="Center" Margin="0,0,5,5"/>
		<ComboBox Grid.Row="8" Grid.Column="1"
				  ItemsSource="{Binding Source={StaticResource NewLineEnumValues}}"
				  SelectedItem="{Binding NewLine, Mode=TwoWay}"
                  Margin="0,0,0,5"/>

		<!-- Gombok -->
		<StackPanel Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
			<Button Content="OK" Height="25" Width="70" Margin="5" IsDefault="True" Command="{Binding SaveCommand}"/>
			<Button Content="Mégse" Height="25" Width="70" Margin="5" IsCancel="True"/>
		</StackPanel>
	</Grid>
</Window>