<Window x:Class="ELM327_GUI.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="InputDialog" Height="200" Width="400">
    <Grid x:Name="MainGrid">
        <TextBlock x:Name="MessageText" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" />
        <Button Content="OK" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="75" Click="OkButton_Click" />
    </Grid>
</Window>