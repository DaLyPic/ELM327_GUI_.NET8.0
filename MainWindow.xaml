<Window x:Class="ELM327_GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ELM327_GUI"
        mc:Ignorable="d"
        Height="630" Width="900"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
	    WindowStartupLocation = "CenterScreen">
	<Border Background="#272537"
            CornerRadius="20">
		<Grid x:Name="MainGrid">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="200"/>
				<ColumnDefinition Width="500"/>
				<ColumnDefinition Width="200"/>
				<ColumnDefinition/>
			</Grid.ColumnDefinitions>

			<Grid.RowDefinitions>
				<RowDefinition Height="100"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="220"/>
			</Grid.RowDefinitions>

			<TextBlock  x:Name="dateTextBlock"
                        Grid.Row="0" Grid.Column="0"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        FontSize="13"
                        Foreground="LightBlue"
                        FontWeight="Bold"
                        TextAlignment="Center"/>

			<TextBlock  Text="ELM327 GUI&#x0a;AUTÓDIAGNOSZTIKAI INTERFÉSZ"
                        Grid.Row="0" Grid.Column="1"
                        FontSize="20"
                        Foreground="LightGoldenrodYellow"
                        FontWeight="Bold"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        TextAlignment="Center"
                        FontFamily="/Fonts/#Gruppo"/>



			<TextBlock  Text="Verzió: 3.0.0&#x0a;Józsi Csaba"
                        Grid.Row="0" Grid.Column="2"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        FontSize="13"
                        Foreground="LightGreen"
                        FontWeight="Bold"
                        TextAlignment="Center"/>

			<StackPanel Grid.Row="1" Grid.Column="0"
                        Margin="10"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Center">

				<Button x:Name="howtouseButton"
                        Content="Használati útmutató"
                        Width="160"
                        Height="40"
                        Margin="0,10,0,10"
                        Command="{Binding MainVM.HowtouseCommand}"/>

				<Button x:Name="ATcommandButton"
					   Content="AT parancsok"
					   Width="160"
					   Height="40"
					   Margin="0,10,0,10"
					   Command="{Binding MainVM.ATcommandCommand}"/>

				<Button x:Name="PIDcommandButton"
                        Content="PID parancsok"
                        Width="160"
                        Height="40"
                        Margin="0,10,0,10"
                        Command="{Binding MainVM.PIDcommandCommand}"/>

				<Button x:Name="commandsfromfileButton"
                        Content="Parancsok fájlból"
                        Width="160"
                        Height="40"
                        Margin="0,10,0,10"
                        Command="{Binding MainVM.CommandsfromfileCommand}"/>

				<Button x:Name="udsButton"
                        Content="UDS kompatibilitás"
                        Width="160"
                        Height="40"
                        Margin="0,10,0,10"
                        Command="{Binding MainVM.UdsCommand}"/>

			</StackPanel>



			<StackPanel Grid.Row="1" Grid.Column="2"
                        Margin="10"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Center">

				<Button x:Name="VINDecodeButton"
                        Content="VIN dekódolás"
                        Width="160"
                        Height="40"
                        Margin="0,10,0,10"
                        Command="{Binding MainVM.OpenVINDecodeWindowCommand}"/>

				<Button x:Name="portSettingButton"
                        Content="Port beállítás"
                        Width="160"
                        Height="40"
                        Margin="0,10,0,10"
                        Command="{Binding MainVM.PortsettingCommand}"/>

				<Button x:Name="PDFreportgenButton"
                        Content="PDF riport generálás"
                        Width="160"
                        Height="40"
                        Margin="0,10,0,10"
                        Command="{Binding MainVM.PDFreportgenCommand}"/>

				<Button x:Name="parsingButton"
                        Content=".dbc adatfájl parsing"
                        Width="160"
                        Height="40"
                        Margin="0,10,0,10"
                        Command="{Binding DbcParserVM.ParsingCommand}"/>

				<Button x:Name="exitButton"
                        Content="Kilépés"
                        Width="160"
                        Height="40"
                        Margin="0,10,0,10"
                        Command="{Binding MainVM.ExitCommand}"/>

			</StackPanel>

			<Grid Grid.Row="1" Grid.Column="1">
				<Grid.Background>
					<ImageBrush ImageSource="Images/pngwing.com0.png" Stretch="UniformToFill"/>
				</Grid.Background>

			</Grid>
			
			<Grid Grid.Row="2" Grid.Column="0">
				<Grid.Background>
					<ImageBrush ImageSource="Images/pngwing.com2.png" Stretch="Uniform"/>
				</Grid.Background>

			</Grid>

			<Grid Grid.Row="2" Grid.Column="2">
				<Grid.Background>
					<ImageBrush ImageSource="Images/pngwing.com1.png" Stretch="Uniform"/>
				</Grid.Background>

			</Grid>
			
			<Border Grid.Row="2" Grid.Column="1" Background="#272537">
			</Border>
			<!-- Center panel: status and responses -->
			<StackPanel Grid.Row="2" Grid.Column="1" Margin="10">
				<TextBlock Text="{Binding MainVM.ConnectionStatus}" Foreground="White" FontWeight="Bold" Margin="0,0,0,10"/>
				<!--<ListBox ItemsSource="{Binding MainVM.Responses}" Height="150" Foreground="White" Background="#272537"/>-->
			</StackPanel>



		</Grid>


	</Border>
</Window>
